extends ../../layouts/default.pug
include ../../mixins/filter-status.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug

//-nhung file trong mixin vao
block main
    h1 Danh sách sản phẩm

    .card.mb-3
        .card-header Bộ lọc và tìm kiếm
        .card-body 
            .row
                .col-6
                   +filter-status(filterStatus)
                   //- truyen bien filterStatus cho file ben mixins 
                .col-6 
                    +search(keyword)
                
                      
    .card.mb-3
        .card-header Danh sách sản phẩm
        .card-body           
        table.table.table-hover.table-sm
            thead
                tr
                    th STT
                    th Hình ảnh
                    th Tiêu đề
                    th Giá
                    th Trạng thái
                    th Hành động
            tbody
                each item ,index in products
                    tr
                        td #{index +1}
                        td 
                            img(
                                src="https://cdn.dummyjson.com/product-images/1/1.jpg" alt=item.title
                                width="100px"
                                height="auto"
                            )
                        td #{item.title}
                        td #{item.price}$
                        td 
                            if(item.status=="active")
                                a(href="javascript:;"
                                data-status=item.status
                                data-id=item.id
                                button-change-status
                                class="badge badge-success") Hoạt động
                            else 
                                a(href="javascript:;" 
                                data-status=item.status
                                data-id=item.id
                                button-change-status
                                class="badge badge-danger") Dừng  Hoạt động
                        td
                            button(class="btn btn-warning btn-sm") Sửa
                            button(class="btn btn-danger btn-sm ml-1") Xóa
                    
    //-trang danh sach
    +pagination(pagination)
    form(
        action=""
        method="GET"
        id="form-change-status"
        data-path=`${prefixAdmin}/products/change-status`
    )

    script(src="/admin/js/product.js")
