extends ../../layouts/default.pug
//-nhúng kế thừa file deafault.pug
include ../../mixins/box-head.pug
//-nhúng các mục mixin vào ở đây la file
block main
    .container.my-3 
        .row 
            .col-12 
               +box-head("Danh sách sản phẩm")
        .row
            each item in products 
                .col-4.mb-3 
                    .product-item 
                        .inner-image 
                        img(
                            src="/images/iphone.jpg"
                            alt=item.title
                            )
                        .inner-content 
                            h3.inner-title #{item.title}
                            .inner-price-new #{item.priceNew}$
                            .inner-price-old #{item.price}$
                            .inner-discount -#{item.price}%
                        
                        